<!DOCTYPE html>
<html lang="en">

<head>
    <title>Handwritng Assessment</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/assets/styles/style.css" rel="stylesheet">

    <!--bootstrap css-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/assets/styles/style.css" rel="stylesheet">

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cabin+Sketch:wght@400;700&family=Poppins&display=swap"
        rel="stylesheet">

</head>

<body>

    <!--bootstrap js-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- grades -->
    <section id="grades">
        <div class="row">
            <div class="col">
                <img src=<%= url %>  alt="a grade">
            </div>
            <div class="col">
                <h1><%= message %></h1>
            </div>
        </div>
        <% if (keys.length) { %>
        <div class="row">
            <h2>Not happy with your grade?</h2><a href="/">Try again :)</a>
        </div>
        <% } %>
    </section>

    <!-- downloads -->
    <section id="downloads">
        <div class="row">
            <div class="col">

                <% if (keys.length) { %>
                    <h1>Download your worksheet here</h1>
                    <button>
                        <a href="/pdf">
                            <span class="button_top">Download</span> 
                        </a>
                    </button>
                <% } %>

            </div>
            <!-- carousel of worksheet   -->
            <% if (keys.length) { %>
            <div class="col">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src= <%=`/assets/images/img-${keys[0]}.png`%>
                                alt="worksheet image">
                        </div>
                        <div class="carousel-item">
                            <img src= <%=`/assets/images/img-${keys[1]}.png`%>
                                alt="worksheet image">
                        </div>
                        <div class="carousel-item">
                            <img src= <%=`/assets/images/img-${keys[2]}.png`%>
                                alt="worksheet image">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <% } %>
        </div>
    </section>

    
</body>

</html>